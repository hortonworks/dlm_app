# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

#Users API

GET           /api/v1/users                        controllers.Users.all
POST          /api/v1/users                        controllers.Users.insert
GET           /api/v1/users/:userId                controllers.Users.load(userId:Long)
DELETE        /api/v1/users/:userId                controllers.Users.delete(userId:Long)
GET           /api/v1/search/users                 controllers.Users.get(name)


#Roles API

GET           /api/v1/roles                        controllers.Roles.all
POST          /api/v1/roles                        controllers.Roles.add
POST          /api/v1/user-role                    controllers.Roles.addUserRole
GET          /api/v1/user-role/user/:username      controllers.Roles.getRolesForUser(username)


#Locations
GET           /api/v1/locations                    controllers.Datalakes.getLocations
GET           /api/v1/locations/:locationId        controllers.Datalakes.loadLocation(locationId:Long)
DELETE        /api/v1/locations/:locationId        controllers.Datalakes.deleteLocation(locationId:Long)
POST          /api/v1/locations                    controllers.Datalakes.addLocation


#Datalakes API
GET           /api/v1/datalakes                    controllers.Datalakes.all
POST          /api/v1/datalakes                    controllers.Datalakes.add




# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file                        controllers.Assets.versioned(path="/public", file: Asset)
