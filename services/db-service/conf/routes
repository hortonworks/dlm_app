# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

#Users API

GET           /api/v1/users                             controllers.Users.all
POST          /api/v1/users                             controllers.Users.insert
GET           /api/v1/users/:userId                     controllers.Users.load(userId:Long)
DELETE        /api/v1/users/:userId                     controllers.Users.delete(userId:Long)
GET           /api/v1/user                              controllers.Users.get(name)


#Roles API
GET           /api/v1/roles                             controllers.Roles.all
GET           /api/v1/roles/:roleId                     controllers.Roles.load(roleId:Long)
POST          /api/v1/roles                             controllers.Roles.add
POST          /api/v1/user-role                         controllers.Roles.addUserRole
GET           /api/v1/user-role/user/:username          controllers.Roles.getRolesForUser(username)

#Permissions API

GET           /api/v1/permissions                       controllers.Permissions.all
POST          /api/v1/permissions                       controllers.Permissions.add
GET           /api/v1/permissions/user/:username        controllers.Permissions.userPermissions(username)



#Locations
GET           /api/v1/locations                         controllers.Datalakes.getLocations
GET           /api/v1/locations/:locationId             controllers.Datalakes.loadLocation(locationId:Long)
DELETE        /api/v1/locations/:locationId             controllers.Datalakes.deleteLocation(locationId:Long)
POST          /api/v1/locations                         controllers.Datalakes.addLocation


#Datalakes API
GET           /api/v1/datalakes                         controllers.Datalakes.all
POST          /api/v1/datalakes                         controllers.Datalakes.add


#Categories
GET           /api/v1/categories                        controllers.Categories.all
POST          /api/v1/categories                        controllers.Categories.insert
GET           /api/v1/categories/:categoryId            controllers.Categories.load(categoryId:Long)
DELETE        /api/v1/categories/:categoryId            controllers.Categories.delete(categoryId:Long)

#Skus API
GET           /api/v1/skus                              controllers.Skus.all
POST          /api/v1/skus                              controllers.Skus.insert
GET           /api/v1/skus/:skuId                       controllers.Skus.load(skuId: Long)
DELETE        /api/v1/skus/:skuId                       controllers.Skus.delete(skuId: Long)

#EnabledSkus API
GET           /api/v1/enabledskus                       controllers.EnabledSkus.all
POST          /api/v1/enabledskus                       controllers.EnabledSkus.insert
GET           /api/v1/enabledskus/:skuId                controllers.EnabledSkus.load(skuId: Long)
DELETE        /api/v1/enabledskus/:skuId                controllers.EnabledSkus.delete(skuId: Long)

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file                             controllers.Assets.versioned(path="/public", file: Asset)
